{{ 'bestsellers.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign products_source = section.settings.products_source | default: 'manual'
  assign products_list = ''

  if products_source == 'collection' and section.settings.collection != blank
    assign collection = section.settings.collection
    assign max_products = section.settings.max_products | default: 8
    assign products_list = collection.products
  else
    assign products_list = section.blocks
  endif
-%}

{%- if products_list.size > 0 -%}
  <style>
    #shopify-section-{{ section.id }} {
      --bestsellers-products-per-row: {{ section.settings.products_per_row }};
      --bestsellers-products-per-row-mobile: {{ section.settings.products_per_row_mobile }};
    }
  </style>

  <div class="bestsellers section-spacing color-scheme color-scheme--{{ section.settings.color_scheme.id }}">
    <div class="bestsellers__container">
      <div class="bestsellers__header">
        {%- if section.settings.title != blank -%}
          <h2 class="bestsellers__title">{{ section.settings.title }}</h2>
        {%- endif -%}
      </div>

      <div class="bestsellers__grid">
        {%- if products_source == 'collection' -%}
          {%- for product in products_list limit: max_products -%}
            <div class="bestsellers__card-wrapper">
              {%- render 'product-card',
                product: product,
                position: forloop.index,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating,
                reveal: false
              -%}
            </div>
          {%- endfor -%}
        {%- else -%}
          {%- for block in products_list -%}
            {%- assign product = block.settings.product -%}
            {%- if product != blank -%}
              <div class="bestsellers__card-wrapper" {{ block.shopify_attributes }}>
                {%- render 'product-card',
                  product: product,
                  position: forloop.index,
                  show_vendor: section.settings.show_vendor,
                  show_rating: section.settings.show_rating,
                  reveal: false
                -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Bestsellers",
  "class": "shopify-section--bestsellers",
  "tag": "section",
  "max_blocks": 20,
  "disabled_on": {
    "groups": ["header", "custom.overlay"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Bestsellers"
    },
    {
      "type": "header",
      "content": "Product Source"
    },
    {
      "type": "radio",
      "id": "products_source",
      "label": "Products source",
      "options": [
        {
          "value": "manual",
          "label": "Manual selection (blocks below)"
        },
        {
          "value": "collection",
          "label": "From collection"
        }
      ],
      "default": "manual",
      "info": "Choose between manually selecting products or automatically pulling from a collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection",
      "info": "Only used when 'From collection' is selected"
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "Maximum products from collection",
      "min": 4,
      "max": 20,
      "step": 1,
      "default": 8,
      "info": "Only used when 'From collection' is selected"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "label": "Products per row (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_per_row_mobile",
      "label": "Products per row (mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "header",
      "content": "Product Card Display"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product ratings",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bestsellers",
      "category": "Products",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}
